{
  "name": "@funkybit/api-client",
  "version": "0.1.0",
  "description": "TypeScript Client for interacting with funkybit - a cross-chain DeFi platform built on Bitcoin and EVM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "example": "ts-node --esm run-example.ts"
  },
  "keywords": [
    "bitcoin",
    "defi",
    "evm",
    "sdk",
    "typescript",
    "funkybit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@wagmi/core": "^2.16.7",
    "@zodios/core": "^10.9.0",
    "@zodios/plugins": "^10.6.0",
    "bitcoinjs-lib": "^6.1.5",
    "bitcoinjs-message": "^2.2.0",
    "decimal.js": "^10.4.0",
    "ecpair": "^2.1.0",
    "ethers": "^6.13.5",
    "tiny-secp256k1": "^2.2.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "viem": "^2.7.9"
  }
